<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProgressFragment">


    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/stepsChart"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/caloriesChart"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/stepsChart" />

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/weightChart"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/caloriesChart"/>

</android.support.constraint.ConstraintLayout>
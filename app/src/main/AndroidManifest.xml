<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sooraj.getfit">

    <uses-feature android:name="android.hardware.sensor.stepcounter" />
    <uses-feature android:name="android.hardware.sensor.stepdetector" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.sooraj.getfit.LoginActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sooraj.getfit.SignUpActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="com.example.sooraj.getfit.MainActivity"
            android:screenOrientation="locked" />

        <service android:name="com.example.sooraj.getfit.BoundService" />
        <receiver
            android:name="com.example.sooraj.getfit.BoundService$MyAlarm"
            android:enabled="true" />
        <activity
            android:name="com.example.sooraj.getfit.GetInformationActivity"
            android:screenOrientation="locked" />

    </application>
    <uses-permission android:name="android.permission.INTERNET" />


</manifest>